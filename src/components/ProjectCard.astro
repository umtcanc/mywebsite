---
type Card = {
  title: string;
  description: string;
  img: string;
  link: string;
  color: string;
  colorText: string;
};

const props = Astro.props as Card;
---

<a href={props.link} target="_blank" class="card">
  
  <h2 style={`color: ${props.colorText}`}>{props.title}</h2>
  <i class="fas fa-arrow-right"></i>
  <p>
    {props.description}
    <i class="fa-brands fa-html5"></i>
  </p>
  <div class="pic" style={`background-image: url('${props.img}')`}></div>

  <button style={`background-color:${props.color}`}> </button>
</a>



<style lang="scss">
  $bg-color: #e6e5e1;
  $shdow-gray: #d3d3d5;
  $orange: #da4d1d;
  $blue: #2b26c3;
  $img-url2: "https://images.unsplash.com/photo-1528785198459-ec50485704c7?ixlib=rb-0.3.5&s=3a2fc3039516555bbb2e9cd2967bd321&auto=format&fit=crop&w=1537&q=80";

  h2 {
    pointer-events: none;
  }

  .card {
    position: relative;
    display: inline-block;
    width: 100%;
    height: 300px;
    background-color: #fff;
    overflow: hidden;
    margin-bottom: 4px;

    @include bp(mobile) {
      height: 150px;
    }

    h2 {
      z-index: 99;
      font-family: "Poppins", sans-serif;
      position: absolute;
      bottom: 0;
      right: 130px;
      font-size: 50px;
      font-weight: 700;
      max-width: 740px;
      line-height: 1.5;
      @include bp(tablet){
        font-size: 40px;
        line-height: 1.2;
      }
      @include bp(mobile){
        font-size: 28px;
        right: 10px;
      }
    }

    .fa-arrow-right {
      z-index: 100;
      position: absolute;
      right: 75px;
      bottom: 25px;
      font-size: 40px;
      cursor: pointer;
      display: none;
    }




    p {
      z-index: 99;
      position: absolute;
      top: 20px;
      right: 70px;
      color: #333;
      opacity: 0.7;
      font-size: 14px;
      letter-spacing: 1px;
      writing-mode: vertical-lr;
      -webkit-transition: all 0.2s ease;
      transition: all 0.2s ease;

      @include bp(mobile) {
        display: none;
      }
    }



    .pic {
      z-index: 100;
      width: 95%;
      height: 100%;
      background-size: 100% 100%;
      filter: grayscale(60%);
      @include bp(mobile) {
        width: 100%;
      }
    }

    button {
      position: absolute;
      right: 14px;
      bottom: 14px;
      width: 50px;
      height: 50px;
      border: none;
      border-radius: 30px;
      cursor: pointer;
      outline: none;
      transition: all 0.3s ease;
      mix-blend-mode: hard-light;
      i {
        font-size: 3rem;
      }
      @include bp(mobile) {
      display: none;
      }
    }

    &:hover button {
      transform: scale(11.5);
      filter: grayscale(10%);
    }

    &:hover p {
      color: #fff;
    }

    &:hover .pic {
      filter: grayscale(0);
      .fa-arrow-right {
        display: block;
      }
    }
  }

</style>
